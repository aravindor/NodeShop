// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id     String   @id @default(uuid())
  name   String   @unique
  spices Spices[]
}

model Spices {
  id          String     @id @default(uuid())
  name        String     @unique
  origin      String?
  description String?    @db.VarChar(1000)
  aroma       String?
  heatLevel   String
  categoryId  String
  image       String?
  category    Category   @relation(fields: [categoryId], references: [id])
  giftSets    GiftSets[]
}

model GiftSets {
  id     String   @id @default(uuid())
  name   String   @unique
  spices Spices[]
}

mixin modal(modalId,closeId,header)
    .relative.z-10(id=modalId aria-labelledby='modal-title' role='dialog' aria-modal='true' class="hidden")
        .fixed.inset-0.bg-gray-500.bg-opacity-75.transition-opacity
        .fixed.inset-0.z-10.w-screen.overflow-y-auto
            .flex.min-h-full.items-end.justify-center.p-4.text-center(class='sm:items-center sm:p-0')
                .relative.transform.overflow-hidden.rounded-lg.bg-white.text-left.shadow-xl.transition-all(class='sm:my-8 sm:w-full sm:max-w-lg')
                    .bg-white.px-4.pb-4.pt-5(class='sm:p-6 sm:pb-4')
                        .flex.flex-row.justify-between.mb-3
                            h1.text-2xl.font-bold=header 
                            i.fa-solid.fa-xmark(id=closeId,onclick="closeModal('" +modalId+ "')")
                        block
    script. 
        function closeModal(modalId) {
            var modal = document.getElementById(modalId);
            modal.classList.add('hidden');
            modal.classList.remove('show');
        }

